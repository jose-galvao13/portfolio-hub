<script>
  /**
   * Inicializa a Barra de Progresso de Leitura Superior
   */
  function initReadingProgress() {
    const bar = document.querySelector(".reading-progress");
    if (!bar) return;

    const updateProgress = () => {
      const winScroll = document.documentElement.scrollTop || document.body.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      (bar as HTMLElement).style.width = scrolled + "%";
    };

    window.addEventListener('scroll', updateProgress, { passive: true });
  }

  /**
   * Controla o comportamento Sticky da Sidebar
   * Aos 80% de scroll da p√°gina, a sidebar fixa-se no fundo do contentor pai
   */
  function initSidebarSticky() {
    const sidebar = document.querySelector('.sidebar-inner') as HTMLElement;
    const container = document.querySelector('.main-layout') as HTMLElement;
    
    if (!sidebar || !container) return;

    const handleSidebar = () => {
      // Desativar l√≥gica em mobile/tablets pequenos
      if (window.innerWidth <= 1024) {
        sidebar.classList.remove('is-released');
        return;
      }

      const winScroll = window.scrollY || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrollPercent = (winScroll / height) * 100;

      if (scrollPercent >= 80) {
        // Fixa a sidebar no fundo do contentor .main-layout
        sidebar.classList.add('is-released');
      } else {
        // Mant√©m a sidebar com position: sticky
        sidebar.classList.remove('is-released');
      }
    };

    window.addEventListener('scroll', () => {
      window.requestAnimationFrame(handleSidebar);
    }, { passive: true });

    window.addEventListener('resize', handleSidebar);
    handleSidebar(); // Execu√ß√£o inicial
  }

  /**
   * Corrige a navega√ß√£o interna e links da Homepage
   */
  function initNavigationFixes() {
    const navLinks = document.querySelectorAll('.nav-links a[href^="#"], .nav-cta-glow[href^="#"]');
    const logoLink = document.querySelector('.nav-logo');
    
    const currentPath = window.location.pathname;
    const basePath = currentPath.includes('/portfolio-hub') ? '/portfolio-hub/' : '/';
    const isHomepage = 
      currentPath === basePath || 
      currentPath === basePath + 'index.html' ||
      currentPath.endsWith('/portfolio-hub') ||
      currentPath === '/' ||
      currentPath === '/index.html';

    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const hash = link.getAttribute('href');
        if (isHomepage) {
          e.preventDefault();
          const target = document.querySelector(hash || '');
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        } else {
          // Se n√£o estiver na home, redireciona para a home + anchor
          window.location.href = basePath + hash;
        }
      });
    });

    if (logoLink && !isHomepage) {
      logoLink.addEventListener('click', (e) => {
        e.preventDefault();
        window.location.href = basePath;
      });
    }
  }

  // Inicializa√ß√£o global ap√≥s carregamento do DOM
  document.addEventListener('DOMContentLoaded', () => {
    initReadingProgress();
    initSidebarSticky();
    initNavigationFixes();
  });
</script>