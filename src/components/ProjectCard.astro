---
interface Props {
  title: string;
  type: string;
  desc: string;
  stack: string[];
  linkRepo: string;
  linkDemo: string;
  caseStudy?: string;
  images: string[];
  id: string;
}

const { title, type, desc, stack, linkRepo, linkDemo, caseStudy, images, id } = Astro.props;
---

<div class="glass-project-card reveal-stagger" id={id}>
  <!-- Top Image / Carousel Section -->
  <div class="card-visuals">
    <div class="carousel-viewport">
      {images.map((imgSrc, idx) => (
        <img
          src={imgSrc}
          alt={title}
          class={`carousel-img ${idx === 0 ? 'active' : ''}`}
          loading={idx === 0 ? 'eager' : 'lazy'}
          style={idx !== 0 ? 'opacity: 0; position: absolute;' : ''}
        />
      ))}
    </div>

    {images.length > 1 && (
      <div class="carousel-controls">
        <button class="nav-arrow prev" aria-label="Previous">‹</button>
        <div class="carousel-dots">
          {images.map((_, idx) => (
            <span class={`dot-indicator ${idx === 0 ? 'active' : ''}`} data-index={idx}></span>
          ))}
        </div>
        <button class="nav-arrow next" aria-label="Next">›</button>
      </div>
    )}
    
    <div class="visual-overlay"></div>
  </div>

  <!-- Content Section -->
  <div class="card-content">
    <div class="content-header">
      <span class="project-badge">{type}</span>
      <h3 class="project-name">{title}</h3>
    </div>

    <div class="project-brief" set:html={desc} />

    <div class="tech-container">
      {stack.map(tech => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>

    <!-- Action Bar -->
    <div class="card-footer">
      <div class="secondary-links">
        <a href={linkRepo} target="_blank" class="footer-icon-link" title="Source Code">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
        </a>
        {linkDemo !== '#' && (
          <a href={linkDemo} target="_blank" class="footer-icon-link" title="Live Demo">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          </a>
        )}
      </div>

      {caseStudy && (
        <a href={caseStudy} class="main-cta-btn">
          <span>Technical Case Study</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .carousel-img {
    cursor: zoom-in;
  }
  
  .glass-project-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }

  .glass-project-card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 212, 255, 0.4);
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 
                0 0 20px rgba(0, 212, 255, 0.1);
  }

  /* Image Section */
  .card-visuals {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: #000;
  }

  .carousel-viewport {
    width: 100%;
    height: 100%;
    display: flex;
    position: relative;
  }

  .carousel-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: opacity 0.6s ease-in-out, transform 0.6s ease;
  }

  .glass-project-card:hover .carousel-img {
    transform: scale(1.05);
  }

  .visual-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 60%, rgba(10, 12, 16, 0.8));
    pointer-events: none;
  }

  /* Carousel Controls */
  .carousel-controls {
    position: absolute;
    bottom: 12px;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    z-index: 10;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .glass-project-card:hover .carousel-controls {
    opacity: 1;
  }

  .nav-arrow {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    transition: 0.2s;
  }

  .nav-arrow:hover { background: var(--accent-cyan, #00d4ff); color: #000; }

  .carousel-dots { display: flex; gap: 6px; }
  .dot-indicator {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    cursor: pointer;
    transition: 0.3s;
  }
  .dot-indicator.active { background: #00d4ff; width: 15px; border-radius: 4px; }

  /* Content Styling */
  .card-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: 16px;
  }

  .project-badge {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #00d4ff;
    margin-bottom: 8px;
    display: block;
  }

  .project-name {
    font-size: 1.4rem;
    font-weight: 700;
    color: #fff;
    line-height: 1.2;
    margin: 0;
  }

  .project-brief {
    font-size: 0.95rem;
    color: #a0a0a0;
    line-height: 1.6;
    /* REMOVIDO: line-clamp para mostrar descrição completa */
  }

  .project-brief :global(strong) {
    color: #fff;
    font-weight: 600;
  }

  .tech-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: auto;
  }

  .tech-tag {
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.15);
    color: #00d4ff;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Footer Actions */
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .secondary-links { display: flex; gap: 12px; }
  
  .footer-icon-link {
    color: #888;
    transition: 0.3s;
    display: flex;
  }
  .footer-icon-link:hover { color: #fff; transform: scale(1.1); }

  .main-cta-btn {
    
    background: linear-gradient(90deg, var(--accent-cyan), var(--accent-green));
    color: #000;
    padding: 10px 18px;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 800;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: 0.3s;
    box-shadow: 0 4px 15px rgba(0, 212, 255, 0.2);
  }

  .main-cta-btn:hover {
    transform: scale(1.03);
    box-shadow: 0 6px 20px rgba(0, 212, 255, 0.4);
  }

  @media (max-width: 480px) {
    .project-name { font-size: 1.2rem; }
    .card-footer { flex-direction: column-reverse; gap: 20px; align-items: flex-start; }
    .main-cta-btn { width: 100%; justify-content: center; }
  }
</style>

<script>
  function initCarousel() {
    const cards = document.querySelectorAll('.glass-project-card');
    
    cards.forEach(card => {
      const images = card.querySelectorAll('.carousel-img');
      const dots = card.querySelectorAll('.dot-indicator');
      const prev = card.querySelector('.prev');
      const next = card.querySelector('.next');
      
      if (images.length <= 1) return;

      let current = 0;

      function update(index: number) {
        images.forEach((img, i) => {
          (img as HTMLElement).style.opacity = i === index ? '1' : '0';
          (img as HTMLElement).style.position = i === index ? 'relative' : 'absolute';
          img.classList.toggle('active', i === index);
        });
        dots.forEach((dot, i) => dot.classList.toggle('active', i === index));
        current = index;
      }

      next?.addEventListener('click', (e) => {
        e.preventDefault();
        update((current + 1) % images.length);
      });

      prev?.addEventListener('click', (e) => {
        e.preventDefault();
        update((current - 1 + images.length) % images.length);
      });

      dots.forEach((dot, i) => {
        dot.addEventListener('click', (e) => {
          e.preventDefault();
          update(i);
        });
      });
    });
  }

  initCarousel();
  document.addEventListener('astro:after-swap', initCarousel);
</script>